@model Trela_Amarela.Models.Animais

@{
    ViewData["Title"] = "Detalhes";
}


<div>
    <h4>Animais</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataNasc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataNasc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Porte)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Porte)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Raca)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Raca)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vacinacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vacinacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Desparasitacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Desparasitacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.N_Especiais)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.N_Especiais)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nr_registo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nr_registo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nr_chip)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nr_chip)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class = "col-sm-10">
           @* imagem do animal*@
            @if (!string.IsNullOrEmpty(Model.Foto))
            {
                @* imagem contem um link que quando ativado a imagem é
                    visualizada numa nova janela do browser*@
                <a href="~/fotos/@Model.Foto" target="_blank">
                    <img src="~/fotos/@Model.Foto"
                         alt="@Html.DisplayFor(modelItem => Model.Nome)"
                         title="@Model.Nome"
                         height="100" />
                </a>
            }
            else
            {
                <img src="~/fotos/@Model.Foto"
                     alt="@Html.DisplayFor(modelItem => Model.Nome)"
                     title="@Model.Nome" height="50" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdAnimal">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>
