@model IEnumerable<Trela_Amarela.Models.Reservas>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.D_Entrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.D_Saida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nr_animais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nr_registo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Box)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.D_Entrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.D_Saida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nr_animais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nr_registo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.CodPostal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Box.IdBox)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdReserva">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdReserva">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdReserva">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
