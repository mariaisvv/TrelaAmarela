@model Trela_Amarela.Models.Reservas

@{
    ViewData["Title"] = "Eliminar Reserva";
}



<h3>Pretende apagar esta reserva?</h3>
<div>
    <h4>Reservas</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.D_Entrada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.D_Entrada)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.D_Saida)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.D_Saida)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nr_animais)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nr_animais)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nr_registo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nr_registo)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Box)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Box.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdReserva" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
