@model Trela_Amarela.Models.Reservas

@{
    ViewData["Title"] = "Edit";

    string selecionado = "";
}

<h1>Editar</h1>

<h4>Reservas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdReserva" />
            <div class="form-group">
                <label asp-for="D_Entrada" class="control-label"></label>
                <input asp-for="D_Entrada" class="form-control" />
                <span asp-validation-for="D_Entrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="D_Saida" class="control-label"></label>
                <input asp-for="D_Saida" class="form-control" />
                <span asp-validation-for="D_Saida" class="text-danger"></span>
            </div>
@*            <div class="form-group">
                <label asp-for="Nr_animais" class="control-label"></label>
                <input asp-for="Nr_animais" class="form-control" />
                <span asp-validation-for="Nr_animais" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Nr_registo" class="control-label"></label>
                <input asp-for="Nr_registo" class="form-control" />
                <span asp-validation-for="Nr_registo" class="text-danger"></span>
            </div>
@*            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="IdBox" class="control-label"></label>
                <select asp-for="IdBox" class="form-control" asp-items="ViewBag.IdBox"></select>
                <span asp-validation-for="IdBox" class="text-danger"></span>
             </div>
             
             <div class="form-group">
                    <label class="control-label">Animais</label>
                    @foreach (Animais item in ViewBag.ListaDeAnimais) {
                        if (Model.ListaAnimais.Contains(item)) { selecionado = "checked"; }
                        <br /> <input type="checkbox" value="@item.IdAnimal" name="AnimalEscolhido" @selecionado/> <span>@item.Nome</span>
                        selecionado = "";
                    }
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
